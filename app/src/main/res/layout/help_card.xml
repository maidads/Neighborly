<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#FFFFFF"
    android:elevation="6dp"
    android:radius="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/helpBackground"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="24dp"
        >

        <TextView
            android:id="@+id/helpTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Need help with..."
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/helpType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type: Moving help"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/helpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: Gatan 1"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/helpDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details here..."
            android:textColor="@color/white"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_gravity="end"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <Button
                android:id="@+id/chatButton"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:background="@android:color/transparent"
                android:text="Chat"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>
